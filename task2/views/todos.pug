script
    function editTodo
html
  head
    title=title
    script(src="fetches.js")
  body
    form(action="/todos", method="post")
        input(type="text" name="todoText" defaultValue="" required) 
        button(type="submit") Submit
    ul
        each todo,index in todos
            li
                label= todo.text 
                a(href = `/todos/${todo._id}/edit`)  edit 
                button(onClick = `deleteTodo("${todo._id}")`)  delete 
                